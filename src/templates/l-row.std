<meta name="l-row">
  A row to contain `l-col` tags.
  <attr name="cols" type="number" default="12">
    The number of columns to have per row.
  </attr>
  <attr name="flush" type="boolean">
    If set then there will be no padding around the row and no gap between
    the columns.
  </attr>

  <aria role="grid" />
  <base use="BakeryBase" from="../base-classes/main.ts" default />
</meta>

<style>
  @js const theme = require("../theme.ts");

  :host {
    display: grid;
    grid-template-columns: ":`repeat(${self.props.cols ?? '12'}, minmax(0, 1fr))`";
  }

  @if !self.props.flush {
    :host {
      theme.padding("block");
      theme.gap("block");
    }
  }
</style>

<slot></slot>
