{
  "compilerOptions": {
    "lib": [
      "deno.ns",
      "dom",
      "dom.iterable",
      "dom.asynciterable",
      "deno.unstable"
    ]
  },
  "tasks": {
    "install": "deno install --allow-all https://deno.land/x/wholemeal@1.0.12/main.ts",
    "test": "wholemeal build && deno test --allow-all",
    "dev": "wholemeal dev --out=./docs/dist",
    "dev-dev": "wholemeal-dev dev --out=./docs/dist",
    "dev-build": "wholemeal-dev build --out=./docs/dist"
  },
  "lint": {
    "rules": {
      "exclude": ["no-case-declarations"]
    }
  }
}
