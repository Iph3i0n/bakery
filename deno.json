{
  "compilerOptions": {
    "lib": ["dom", "deno.ns", "deno.unstable"]
  },
  "tasks": {
    "install": "deno install --allow-all https://deno.land/x/wholemeal@0.1.0/main.ts",
    "test": "deno test --allow-all",
    "build": "wholemeal",
    "build-docs": "wholemeal build --out=./docs/dist",
    "dev": "wholemeal dev --out=./docs/dist",
    "dev-dev": "wholemeal-dev dev --out=./docs/dist",
    "prepublish": "deno run --allow-write --allow-env --allow-read ./create-package.ts"
  },
  "lint": {
    "rules": {
      "exclude": ["no-case-declarations"]
    }
  }
}
